        <a href="/">Home</a>
        <a href="/logout">Logout</a>
        <div class="dot"></div>
      </nav>
      <div class="cards-list">
        <div class="card 1" onClick="location.href='/books'">
          <div class="card_image"> <img src="images\Books.jpg" /> </div>
          <div class="card_title title-white">
